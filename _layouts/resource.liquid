---
layout: default
---
<article class="post">

  <header class="post-header">
    <h1 class="post-title">{{ page.title | escape }}</h1>
  </header>

  <div class="post-content">
    {% if page.description %}
      <p class="lead">{{ page.description }}</p>
    {% endif %}

    {{ content }}

    {% if page.file %}
      <div class="file-embed-container mt-4">
        {% assign file_extension = page.file | split: '.' | last | downcase %}
        {% if file_extension == 'pdf' %}
          <object data="{{ page.file | relative_url }}" type="application/pdf" width="100%" height="800px">
            <p>Your browser does not support PDFs. <a href="{{ page.file | relative_url }}">Download the PDF</a>.</p>
          </object>
        {% elsif 'jpg,jpeg,png,gif' | split: ',' contains file_extension %}
          <img src="{{ page.file | relative_url }}" alt="{{ page.title }}" class="img-fluid rounded">
        {% else %}
          <a href="{{ page.file | relative_url }}" class="btn btn-primary">Download {{ page.title }}</a>
        {% endif %}
      </div>
    {% endif %}
  </div>

</article> 