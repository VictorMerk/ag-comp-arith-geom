---
---
<div class="publication-page">
  <!-- Publication Header -->
  <div class="publication-header">
    <div class="container">
      <div class="publication-meta">
        <div class="publication-type-badge">
          <i class="fas fa-{{ page.type | downcase | replace: ' ', '-' }}"></i>
          {{ page.type }}
        </div>
        {% if page.status %}
        <div class="publication-status-badge status-{{ page.status | downcase | replace: ' ', '-' }}">
          {{ page.status }}
        </div>
        {% endif %}
        {% if page.year %}
        <div class="publication-year">
          {{ page.year }}
        </div>
        {% endif %}
      </div>
      
      <h1 class="publication-title">{{ page.title }}</h1>
      
      {% if page.authors %}
      <div class="publication-authors">
        {{ page.authors }}
      </div>
      {% endif %}
      
      {% if page.journal or page.volume or page.pages %}
      <div class="publication-venue">
        {% if page.journal %}<em>{{ page.journal }}</em>{% endif %}
        {% if page.volume %}{% if page.journal %}, {% endif %}{{ page.volume }}{% endif %}
        {% if page.pages %}{% if page.journal or page.volume %}, {% endif %}{{ page.pages }}{% endif %}
      </div>
      {% endif %}
    </div>
  </div>

  <!-- Publication Content -->
  <div class="publication-content">
    <div class="container">
      <div class="row">
        <!-- Main Content -->
        <div class="col-lg-8">
          {% if page.abstract %}
          <div class="publication-section">
            <h3>Abstract</h3>
            <div class="abstract-text">
              {{ page.abstract | markdownify }}
            </div>
          </div>
          {% endif %}

          {% if page.keywords %}
          <div class="publication-section">
            <h3>Keywords</h3>
            <div class="keywords">
              {% assign keywords = page.keywords | split: ',' %}
              {% for keyword in keywords %}
              <span class="keyword-badge">{{ keyword | strip }}</span>
              {% endfor %}
            </div>
          </div>
          {% endif %}

          {% if page.software_info %}
          <div class="publication-section">
            <h3>Software Information</h3>
            <div class="software-info">
              {% if page.software_info.repository_url %}
              <div class="software-item">
                <strong>Repository:</strong>
                <a href="{{ page.software_info.repository_url }}" target="_blank" rel="noopener">
                  <i class="fab fa-github"></i> View Repository
                </a>
              </div>
              {% endif %}
              
              {% if page.software_info.download_url %}
              <div class="software-item">
                <strong>Download:</strong>
                <a href="{{ page.software_info.download_url }}" target="_blank" rel="noopener">
                  <i class="fas fa-download"></i> Download Package
                </a>
              </div>
              {% endif %}
              
              {% if page.software_info.version %}
              <div class="software-item">
                <strong>Version:</strong> {{ page.software_info.version }}
              </div>
              {% endif %}
              
              {% if page.software_info.license %}
              <div class="software-item">
                <strong>License:</strong> {{ page.software_info.license }}
              </div>
              {% endif %}
              
              {% if page.software_info.documentation %}
              <div class="software-item">
                <strong>Documentation:</strong>
                <a href="{{ page.software_info.documentation }}" target="_blank" rel="noopener">
                  <i class="fas fa-book"></i> View Documentation
                </a>
              </div>
              {% endif %}
            </div>
          </div>
          {% endif %}

          <!-- Publication Content -->
          <div class="publication-section">
            {{ content }}
          </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
          <div class="publication-sidebar">
            <!-- Links -->
            <div class="sidebar-section">
              <h4>Links</h4>
              <div class="publication-links">
                {% if page.doi %}
                <a href="https://doi.org/{{ page.doi }}" class="btn btn-outline-primary btn-sm" target="_blank" rel="noopener">
                  <i class="fas fa-external-link-alt"></i> DOI
                </a>
                {% endif %}
                
                {% if page.arxiv %}
                <a href="https://arxiv.org/abs/{{ page.arxiv }}" class="btn btn-outline-primary btn-sm" target="_blank" rel="noopener">
                  <i class="fas fa-file-alt"></i> arXiv
                </a>
                {% endif %}
                
                {% if page.url %}
                <a href="{{ page.url }}" class="btn btn-outline-primary btn-sm" target="_blank" rel="noopener">
                  <i class="fas fa-external-link-alt"></i> View Paper
                </a>
                {% endif %}
                
                {% if page.pdf %}
                <a href="{{ page.pdf }}" class="btn btn-outline-success btn-sm" target="_blank" rel="noopener">
                  <i class="fas fa-file-pdf"></i> PDF
                </a>
                {% endif %}
              </div>
            </div>

            <!-- Metrics -->
            {% if page.impact_factor or page.citations %}
            <div class="sidebar-section">
              <h4>Metrics</h4>
              <div class="publication-metrics">
                {% if page.impact_factor %}
                <div class="metric-item">
                  <strong>Impact Factor:</strong> {{ page.impact_factor }}
                </div>
                {% endif %}
                
                {% if page.citations %}
                <div class="metric-item">
                  <strong>Citations:</strong> {{ page.citations }}
                </div>
                {% endif %}
              </div>
            </div>
            {% endif %}

            <!-- Team Members -->
            {% if page.team_members %}
            <div class="sidebar-section">
              <h4>Team Members</h4>
              <div class="team-members-list">
                {% for member in page.team_members %}
                <div class="team-member-item">
                  <a href="/members/{{ member.name | downcase | replace: ' ', '-' }}/">
                    {{ member.name }}
                  </a>
                </div>
                {% endfor %}
              </div>
            </div>
            {% endif %}

            <!-- Research Areas -->
            {% if page.research_areas %}
            <div class="sidebar-section">
              <h4>Research Areas</h4>
              <div class="research-areas-list">
                {% for area in page.research_areas %}
                <div class="research-area-item">
                  <a href="/research/{{ area.title | downcase | replace: ' ', '-' }}/">
                    {{ area.title }}
                  </a>
                </div>
                {% endfor %}
              </div>
            </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.publication-page {
  background: var(--bg-primary);
  min-height: 100vh;
}

.publication-header {
  background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-primary) 100%);
  border-bottom: 3px solid var(--primary);
  padding: 3rem 0;
  margin-bottom: 2rem;
}

.publication-meta {
  display: flex;
  gap: 1rem;
  margin-bottom: 1.5rem;
  flex-wrap: wrap;
  align-items: center;
}

.publication-type-badge {
  background: linear-gradient(135deg, var(--primary) 0%, var(--heidelberg-red) 100%);
  color: white;
  padding: 0.5rem 1rem;
  border-radius: 2rem;
  font-size: 0.9rem;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.publication-status-badge {
  padding: 0.5rem 1rem;
  border-radius: 2rem;
  font-size: 0.9rem;
  font-weight: 600;
  border: 2px solid;
}

.status-published {
  background: #d4edda;
  color: #155724;
  border-color: #c3e6cb;
}

.status-submitted {
  background: #fff3cd;
  color: #856404;
  border-color: #ffeaa7;
}

.status-under-review {
  background: #d1ecf1;
  color: #0c5460;
  border-color: #bee5eb;
}

.status-in-preparation {
  background: #f8d7da;
  color: #721c24;
  border-color: #f5c6cb;
}

.publication-year {
  background: var(--bg-muted);
  color: var(--text-secondary);
  padding: 0.5rem 1rem;
  border-radius: 2rem;
  font-size: 0.9rem;
  font-weight: 600;
}

.publication-title {
  font-size: 2.5rem;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 1rem;
  line-height: 1.2;
}

.publication-authors {
  font-size: 1.2rem;
  color: var(--text-secondary);
  margin-bottom: 1rem;
  font-style: italic;
}

.publication-venue {
  font-size: 1.1rem;
  color: var(--text-secondary);
  margin-bottom: 1rem;
}

.publication-content {
  padding: 0 0 3rem 0;
}

.publication-section {
  background: var(--bg-secondary);
  border-radius: var(--radius-lg);
  padding: 2rem;
  margin-bottom: 2rem;
  border: 1px solid var(--border-color);
  box-shadow: var(--shadow-sm);
}

.publication-section h3 {
  color: var(--text-primary);
  font-size: 1.5rem;
  font-weight: 600;
  margin-bottom: 1rem;
  padding-bottom: 0.5rem;
  border-bottom: 2px solid var(--primary);
}

.abstract-text {
  color: var(--text-secondary);
  line-height: 1.7;
  font-size: 1.1rem;
}

.keywords {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.keyword-badge {
  background: var(--bg-muted);
  color: var(--text-secondary);
  padding: 0.4rem 0.8rem;
  border-radius: 1rem;
  font-size: 0.9rem;
  border: 1px solid var(--border-color);
}

.software-info {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.software-item {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem;
  background: var(--bg-primary);
  border-radius: var(--radius-md);
  border: 1px solid var(--border-color);
}

.software-item strong {
  color: var(--text-primary);
  min-width: 100px;
}

.software-item a {
  color: var(--primary);
  text-decoration: none;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.software-item a:hover {
  text-decoration: underline;
}

.publication-sidebar {
  position: sticky;
  top: 2rem;
}

.sidebar-section {
  background: var(--bg-secondary);
  border-radius: var(--radius-lg);
  padding: 1.5rem;
  margin-bottom: 1.5rem;
  border: 1px solid var(--border-color);
  box-shadow: var(--shadow-sm);
}

.sidebar-section h4 {
  color: var(--text-primary);
  font-size: 1.2rem;
  font-weight: 600;
  margin-bottom: 1rem;
  padding-bottom: 0.5rem;
  border-bottom: 2px solid var(--primary);
}

.publication-links {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.publication-links .btn {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  justify-content: center;
  text-decoration: none;
}

.publication-metrics {
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.metric-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0.5rem 0;
  border-bottom: 1px solid var(--border-color);
}

.metric-item:last-child {
  border-bottom: none;
}

.metric-item strong {
  color: var(--text-primary);
}

.team-members-list,
.research-areas-list {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.team-member-item,
.research-area-item {
  padding: 0.5rem 0;
  border-bottom: 1px solid var(--border-color);
}

.team-member-item:last-child,
.research-area-item:last-child {
  border-bottom: none;
}

.team-member-item a,
.research-area-item a {
  color: var(--primary);
  text-decoration: none;
  font-weight: 500;
}

.team-member-item a:hover,
.research-area-item a:hover {
  text-decoration: underline;
}

/* Responsive Design */
@media (max-width: 991.98px) {
  .publication-header {
    padding: 2rem 0;
  }
  
  .publication-title {
    font-size: 2rem;
  }
  
  .publication-meta {
    gap: 0.75rem;
  }
  
  .publication-type-badge,
  .publication-status-badge,
  .publication-year {
    font-size: 0.8rem;
    padding: 0.4rem 0.8rem;
  }
  
  .publication-sidebar {
    position: static;
    margin-top: 2rem;
  }
}

@media (max-width: 768px) {
  .publication-title {
    font-size: 1.8rem;
  }
  
  .publication-authors {
    font-size: 1.1rem;
  }
  
  .publication-section {
    padding: 1.5rem;
  }
  
  .publication-meta {
    flex-direction: column;
    align-items: flex-start;
  }
}

@media (max-width: 576px) {
  .publication-header {
    padding: 1.5rem 0;
  }
  
  .publication-title {
    font-size: 1.5rem;
  }
  
  .publication-section {
    padding: 1rem;
  }
  
  .sidebar-section {
    padding: 1rem;
  }
}
</style> 