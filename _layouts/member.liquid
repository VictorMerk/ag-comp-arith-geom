---
layout: page
---
<div class="member-profile">
  <div class="member-header">
    <div class="member-photo-container">
      {% if page.photo %}
        <img src="{{ page.photo | relative_url }}" alt="Photo of {{ page.name }}" class="member-photo">
      {% else %}
        <img src="{{ '/assets/images/heidelberg_placeholder.jpg' | relative_url }}" alt="Placeholder photo for {{ page.name }}" class="member-photo">
      {% endif %}
    </div>
    <div class="member-info">
      <h1 class="member-name">{{ page.name }}</h1>
      {% if page.role %}
        <p class="member-role">{{ page.role }}</p>
      {% endif %}
      {% if page.email %}
        <div class="member-contact">
          <a href="mailto:{{ page.email }}" class="member-email">
            <i class="fas fa-envelope me-2" aria-hidden="true"></i>{{ page.email }}
          </a>
        </div>
      {% endif %}
      <div class="member-links">
        {% if page.website %}
          <a href="{{ page.website }}" target="_blank" rel="noopener noreferrer" class="member-link" aria-label="Personal Website of {{ page.name }}">
            <i class="fas fa-globe" aria-hidden="true"></i>
            <span>Website</span>
          </a>
        {% endif %}
        {% if page.github %}
          <a href="https://github.com/{{ page.github }}" target="_blank" rel="noopener noreferrer" class="member-link" aria-label="GitHub Profile of {{ page.name }}">
            <i class="fab fa-github" aria-hidden="true"></i>
            <span>GitHub</span>
          </a>
        {% endif %}
        {% if page.orcid %}
          <a href="https://orcid.org/{{ page.orcid }}" target="_blank" rel="noopener noreferrer" class="member-link" aria-label="ORCID Profile of {{ page.name }}">
            <i class="ai ai-orcid" aria-hidden="true"></i>
            <span>ORCID</span>
          </a>
        {% endif %}
      </div>
    </div>
  </div>

  <div class="member-content">
    {% if page.research_interests %}
      <div class="member-section">
        <h2 class="member-section-title">Research Interests</h2>
        <div class="member-section-content">
          {{ page.research_interests | markdownify }}
        </div>
      </div>
    {% endif %}

    <div class="member-section">
      <h2 class="member-section-title">About</h2>
      <div class="member-section-content">
        {{ content }}
      </div>
    </div>
  </div>
</div>

<style>
.member-profile {
  max-width: 800px;
  margin: 0 auto;
  padding: 2rem 0;
}

.member-header {
  display: flex;
  align-items: flex-start;
  gap: 2rem;
  margin-bottom: 3rem;
  padding: 2rem;
  background: var(--bg-secondary);
  border-radius: var(--radius-xl);
  border: 1px solid var(--border-color);
}

.member-photo-container {
  flex-shrink: 0;
}

.member-photo {
  width: 200px;
  height: 200px;
  border-radius: 50%;
  object-fit: cover;
  border: 4px solid var(--border-color);
  box-shadow: var(--shadow-lg);
  transition: all var(--transition-base);
}

.member-photo:hover {
  border-color: var(--primary);
  transform: scale(1.05);
}

.member-info {
  flex: 1;
}

.member-name {
  font-size: 2.5rem;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 0.5rem;
  line-height: 1.2;
}

.member-role {
  font-size: 1.25rem;
  font-weight: 500;
  color: var(--text-secondary);
  margin-bottom: 1rem;
  font-style: italic;
}

.member-contact {
  margin-bottom: 1.5rem;
}

.member-email {
  display: inline-flex;
  align-items: center;
  color: var(--link-color);
  text-decoration: none;
  font-size: 1.1rem;
  font-weight: 500;
  padding: 0.5rem 1rem;
  background: var(--bg-primary);
  border-radius: var(--radius-lg);
  border: 1px solid var(--border-color);
  transition: all var(--transition-base);
}

.member-email:hover {
  color: var(--link-hover);
  background: var(--bg-tertiary);
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
}

.member-links {
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
}

.member-link {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  color: var(--text-secondary);
  text-decoration: none;
  font-size: 0.95rem;
  font-weight: 500;
  padding: 0.75rem 1rem;
  background: var(--bg-primary);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  transition: all var(--transition-base);
  min-width: 44px;
  min-height: 44px;
}

.member-link:hover {
  color: var(--primary);
  background: var(--bg-secondary);
  transform: translateY(-2px);
  box-shadow: var(--shadow-md);
  border-color: var(--primary);
}

.member-link i {
  font-size: 1.1rem;
}

.member-content {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.member-section {
  background: var(--bg-primary);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-xl);
  padding: 2rem;
  box-shadow: var(--shadow-sm);
}

.member-section-title {
  font-size: 1.5rem;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 1rem;
  padding-bottom: 0.5rem;
  border-bottom: 2px solid var(--border-color);
}

.member-section-content {
  color: var(--text-secondary);
  line-height: 1.7;
  font-size: 1rem;
}

.member-section-content h3,
.member-section-content h4 {
  color: var(--text-primary);
  margin-top: 1.5rem;
  margin-bottom: 0.5rem;
}

.member-section-content ul {
  margin-left: 1.5rem;
}

.member-section-content li {
  margin-bottom: 0.5rem;
}

/* Responsive design */
@media (max-width: 768px) {
  .member-header {
    flex-direction: column;
    text-align: center;
    gap: 1.5rem;
  }
  
  .member-photo {
    width: 150px;
    height: 150px;
  }
  
  .member-name {
    font-size: 2rem;
  }
  
  .member-role {
    font-size: 1.1rem;
  }
  
  .member-links {
    justify-content: center;
  }
}

@media (max-width: 480px) {
  .member-profile {
    padding: 1rem 0;
  }
  
  .member-header {
    padding: 1.5rem;
  }
  
  .member-photo {
    width: 120px;
    height: 120px;
  }
  
  .member-name {
    font-size: 1.75rem;
  }
  
  .member-section {
    padding: 1.5rem;
  }
}
</style> 