---
layout: default
---
<article class="post">

  <header class="post-header">
    <h1 class="post-title">{{ page.title | escape }}</h1>
    {% if page.author %}
      <p class="post-meta fst-italic">By {{ page.author }}</p>
    {% endif %}
  </header>

  <div class="post-content">
    {% if page.description %}
      <div class="lead">
        {{ page.description | markdownify }}
      </div>
    {% endif %}

    {{ content }}

    {% if page.files and page.files.size > 0 %}
      <hr>
      <h3 class="mt-4">Attached Files</h3>
      <div class="file-gallery mt-4">
        {% for file in page.files %}
          <div class="file-embed-container mb-5">
            {% assign file_extension = file | split: '.' | last | downcase %}
            {% assign image_extensions = 'jpg,jpeg,png,gif,svg' | split: ',' %}

            {% if file_extension == 'pdf' %}
              <h5>{{ file | split: '/' | last }}</h5>
              <object data="{{ file | relative_url }}" type="application/pdf" width="100%" height="800px" class="rounded shadow-sm">
                <p>Your browser does not support PDFs. <a href="{{ file | relative_url }}">Download the PDF</a>.</p>
              </object>
            {% elsif image_extensions contains file_extension %}
              <figure class="text-center">
                <img src="{{ file | relative_url }}" alt="{{ page.title }}" class="img-fluid rounded shadow-sm" style="max-height: 70vh;">
                <figcaption class="text-muted small mt-2">{{ file | split: '/' | last }}</figcaption>
              </figure>
            {% else %}
              <a href="{{ file | relative_url }}" class="btn btn-primary"><i class="fas fa-download me-2"></i>Download {{ file | split: '/' | last }}</a>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>

</article> 