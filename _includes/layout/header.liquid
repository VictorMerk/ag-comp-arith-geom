<script>
document.addEventListener('DOMContentLoaded', function() {
  // Enhanced theme toggle functionality
  const themeToggle = document.getElementById('theme-toggle');
  const themeIconLight = document.getElementById('theme-icon-light');
  const themeIconDark = document.getElementById('theme-icon-dark');
  
  if (themeToggle && themeIconLight && themeIconDark) {
    // Update icon based on current theme
    function updateThemeIcon(theme) {
      // Remove inline styles to let CSS control responsive behavior
      themeIconLight.style.display = '';
      themeIconDark.style.display = '';

      // Use CSS classes to control which icon is shown
      if (theme === 'dark') {
        themeToggle.classList.remove('light-mode');
        themeToggle.classList.add('dark-mode');
        themeToggle.setAttribute('aria-label', 'Switch to light mode');
        themeToggle.setAttribute('title', 'Switch to light mode');
      } else {
        themeToggle.classList.remove('dark-mode');
        themeToggle.classList.add('light-mode');
        themeToggle.setAttribute('aria-label', 'Switch to dark mode');
        themeToggle.setAttribute('title', 'Switch to dark mode');
      }
    }
    
    // Initialize icon based on current theme
    const currentTheme = localStorage.getItem('theme') ||
                        (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
    updateThemeIcon(currentTheme);

    // Ensure theme toggle has proper initial class
    if (currentTheme === 'dark') {
      themeToggle.classList.add('dark-mode');
      themeToggle.classList.remove('light-mode');
    } else {
      themeToggle.classList.add('light-mode');
      themeToggle.classList.remove('dark-mode');
    }
    
    // Listen for theme changes
    document.addEventListener('themeChanged', function(e) {
      updateThemeIcon(e.detail.theme);
    });
  }
  
  // Enhanced mobile menu accessibility
  const navbarToggler = document.querySelector('.navbar-toggler');
  const navbarCollapse = document.querySelector('.navbar-collapse');
  
  if (navbarToggler && navbarCollapse) {
    navbarToggler.addEventListener('click', function() {
      const isExpanded = navbarToggler.getAttribute('aria-expanded') === 'true';
      navbarToggler.setAttribute('aria-expanded', !isExpanded);
      
      // Announce menu state for screen readers
      const announcement = document.createElement('div');
      announcement.setAttribute('aria-live', 'polite');
      announcement.className = 'sr-only';
      announcement.textContent = isExpanded ? 'Menu collapsed' : 'Menu expanded';
      document.body.appendChild(announcement);
      
      setTimeout(() => {
        if (document.body.contains(announcement)) {
          document.body.removeChild(announcement);
        }
      }, 1000);
    });
  }
  
  // Close mobile menu when clicking on nav links
  const navLinks = document.querySelectorAll('.navbar-nav .nav-link');
  navLinks.forEach(link => {
    link.addEventListener('click', function() {
      if (window.innerWidth < 700) {
        const bsCollapse = bootstrap.Collapse.getInstance(navbarCollapse);
        if (bsCollapse) {
          bsCollapse.hide();
        }
      }
    });
  });
  
  // Keyboard navigation enhancements
  document.addEventListener('keydown', function(e) {
    // ESC to close mobile menu
    if (e.key === 'Escape' && navbarCollapse.classList.contains('show')) {
      const bsCollapse = bootstrap.Collapse.getInstance(navbarCollapse);
      if (bsCollapse) {
        bsCollapse.hide();
      }
    }
  });

  // Progressive responsive navbar functionality
  function updateNavbarForScreenSize() {
    const width = window.innerWidth;
    const navLinks = document.querySelectorAll('.nav-link');
    const brandLogo = document.querySelector('.brand-logo-img');
    const themeIconLight = document.getElementById('theme-icon-light');
    const themeIconDark = document.getElementById('theme-icon-dark');

    // Remove all inline styles first to let CSS media queries control the responsive behavior
    navLinks.forEach(link => {
      const icon = link.querySelector('.nav-icon');
      const text = link.querySelector('.nav-text');

      // Remove inline styles
      if (icon) {
        icon.style.marginRight = '';
        icon.style.fontSize = '';
      }
      if (text) {
        text.style.display = '';
      }
    });

    // Remove brand logo inline styles
    if (brandLogo) {
      brandLogo.style.height = '';
    }

    // Remove theme icon inline styles (CSS classes will control visibility)
    if (themeIconLight) themeIconLight.style.display = '';
    if (themeIconDark) themeIconDark.style.display = '';

    // Let CSS handle the responsive behavior - no need to set inline styles
    // The CSS media queries will handle all the responsive changes automatically
  }

  // Update navbar on page load and window resize
  updateNavbarForScreenSize();
  window.addEventListener('resize', function() {
    updateNavbarForScreenSize();
  });


});
</script>
