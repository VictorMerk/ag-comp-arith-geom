<script>
document.addEventListener('DOMContentLoaded', function() {
  // Enhanced theme toggle functionality
  const themeToggle = document.getElementById('theme-toggle');
  const themeIconLight = document.getElementById('theme-icon-light');
  const themeIconDark = document.getElementById('theme-icon-dark');
  
  if (themeToggle && themeIconLight && themeIconDark) {
    // Update icon based on current theme
    function updateThemeIcon(theme) {
      if (theme === 'dark') {
        themeIconLight.style.display = 'inline-block';
        themeIconDark.style.display = 'none';
        themeToggle.setAttribute('aria-label', 'Switch to light mode');
        themeToggle.setAttribute('title', 'Switch to light mode');
      } else {
        themeIconLight.style.display = 'none';
        themeIconDark.style.display = 'inline-block';
        themeToggle.setAttribute('aria-label', 'Switch to dark mode');
        themeToggle.setAttribute('title', 'Switch to dark mode');
      }
    }
    
    // Initialize icon based on current theme
    const currentTheme = localStorage.getItem('theme') || 
                        (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
    updateThemeIcon(currentTheme);
    
    // Listen for theme changes
    document.addEventListener('themeChanged', function(e) {
      updateThemeIcon(e.detail.theme);
    });
  }
  
  // Enhanced mobile menu accessibility
  const navbarToggler = document.querySelector('.navbar-toggler');
  const navbarCollapse = document.querySelector('.navbar-collapse');
  
  if (navbarToggler && navbarCollapse) {
    navbarToggler.addEventListener('click', function() {
      const isExpanded = navbarToggler.getAttribute('aria-expanded') === 'true';
      navbarToggler.setAttribute('aria-expanded', !isExpanded);
      
      // Announce menu state for screen readers
      const announcement = document.createElement('div');
      announcement.setAttribute('aria-live', 'polite');
      announcement.className = 'sr-only';
      announcement.textContent = isExpanded ? 'Menu collapsed' : 'Menu expanded';
      document.body.appendChild(announcement);
      
      setTimeout(() => {
        if (document.body.contains(announcement)) {
          document.body.removeChild(announcement);
        }
      }, 1000);
    });
  }
  
  // Close mobile menu when clicking on nav links
  const navLinks = document.querySelectorAll('.navbar-nav .nav-link');
  navLinks.forEach(link => {
    link.addEventListener('click', function() {
      if (window.innerWidth < 992) {
        const bsCollapse = bootstrap.Collapse.getInstance(navbarCollapse);
        if (bsCollapse) {
          bsCollapse.hide();
        }
      }
    });
  });
  
  // Keyboard navigation enhancements
  document.addEventListener('keydown', function(e) {
    // ESC to close mobile menu
    if (e.key === 'Escape' && navbarCollapse.classList.contains('show')) {
      const bsCollapse = bootstrap.Collapse.getInstance(navbarCollapse);
      if (bsCollapse) {
        bsCollapse.hide();
      }
    }
  });

  // Progressive responsive navbar functionality
  function updateNavbarForScreenSize() {
    const width = window.innerWidth;
    const navLinks = document.querySelectorAll('.nav-link');

    navLinks.forEach(link => {
      const icon = link.querySelector('.nav-icon');
      const text = link.querySelector('.nav-text');

      if (width >= 1200) {
        // Large screens: show both icons and text
        link.setAttribute('aria-label', text ? text.textContent : '');
        icon.style.marginRight = '';
      } else if (width >= 992 && width < 1200) {
        // Medium screens: icons only
        const textContent = text ? text.textContent : '';
        link.setAttribute('aria-label', textContent);
        link.setAttribute('title', textContent);
      } else {
        // Small screens: dropdown menu
        link.setAttribute('aria-label', text ? text.textContent : '');
        link.removeAttribute('title');
      }
    });
  }

  // Debug indicator for responsive states (can be removed later)
  function addDebugIndicator() {
    const existing = document.getElementById('responsive-debug');
    if (existing) existing.remove();

    const indicator = document.createElement('div');
    indicator.id = 'responsive-debug';
    indicator.style.cssText = `
      position: fixed;
      bottom: 10px;
      right: 10px;
      background: rgba(0,0,0,0.8);
      color: white;
      padding: 5px 10px;
      border-radius: 4px;
      font-size: 12px;
      z-index: 9999;
      pointer-events: none;
    `;

    const width = window.innerWidth;
    let mode = 'Mobile';
    let searchMode = 'Mobile';

    if (width >= 1200) {
      mode = 'Full Mode';
      searchMode = 'Center Bar';
    } else if (width >= 768) {
      mode = 'Icons Only + Search';
      searchMode = 'Center Bar';
    }

    indicator.innerHTML = `${mode}<br>Search: ${searchMode}<br>(${width}px)`;
    document.body.appendChild(indicator);
  }

  // Update navbar on page load and window resize
  updateNavbarForScreenSize();
  addDebugIndicator();
  window.addEventListener('resize', function() {
    updateNavbarForScreenSize();
    addDebugIndicator();
  });

  // Compact search button functionality (medium screens)
  const compactSearchToggle = document.getElementById('compact-search-toggle');

  if (compactSearchToggle) {
    compactSearchToggle.addEventListener('click', function() {
      // Create or toggle compact search overlay
      let compactSearchOverlay = document.getElementById('compact-search-overlay');

      if (!compactSearchOverlay) {
        // Create overlay
        compactSearchOverlay = document.createElement('div');
        compactSearchOverlay.id = 'compact-search-overlay';
        compactSearchOverlay.style.cssText = `
          position: fixed;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          background: rgba(0, 0, 0, 0.8);
          z-index: 9998;
          display: flex;
          align-items: center;
          justify-content: center;
          opacity: 0;
          transition: opacity var(--transition-base);
        `;

        const searchContainer = document.createElement('div');
        searchContainer.style.cssText = `
          background: var(--primary);
          padding: 2rem;
          border-radius: var(--radius-lg);
          width: 90%;
          max-width: 500px;
          position: relative;
        `;

        const closeButton = document.createElement('button');
        closeButton.innerHTML = '√ó';
        closeButton.style.cssText = `
          position: absolute;
          top: 1rem;
          right: 1rem;
          background: none;
          border: none;
          color: var(--white);
          font-size: 2rem;
          cursor: pointer;
          padding: 0;
          width: 30px;
          height: 30px;
          display: flex;
          align-items: center;
          justify-content: center;
          border-radius: var(--radius-md);
          transition: all var(--transition-base);
        `;
        closeButton.setAttribute('aria-label', 'Close search');

        const searchWrapper = document.createElement('div');
        searchWrapper.className = 'search-container';
        searchWrapper.innerHTML = `
          <div class="search-input-wrapper">
            <input type="text" id="search-input-compact" class="search-input"
                   placeholder="Search articles, publications, research..."
                   aria-label="Search this site" autocomplete="off">
          </div>
          <div id="search-results-compact" class="search-results-container"></div>
        `;

        closeButton.addEventListener('click', function() {
          compactSearchOverlay.style.opacity = '0';
          setTimeout(() => {
            document.body.removeChild(compactSearchOverlay);
          }, 300);
        });

        searchContainer.appendChild(closeButton);
        searchContainer.appendChild(searchWrapper);
        compactSearchOverlay.appendChild(searchContainer);
        document.body.appendChild(compactSearchOverlay);

        // Focus the search input after a short delay
        setTimeout(() => {
          const searchInput = document.getElementById('search-input-compact');
          if (searchInput) searchInput.focus();
        }, 100);
      }

      // Show overlay
      setTimeout(() => {
        compactSearchOverlay.style.opacity = '1';
      }, 10);

      // Close on escape key
      const handleEscape = function(e) {
        if (e.key === 'Escape') {
          compactSearchOverlay.style.opacity = '0';
          setTimeout(() => {
            if (document.body.contains(compactSearchOverlay)) {
              document.body.removeChild(compactSearchOverlay);
            }
          }, 300);
          document.removeEventListener('keydown', handleEscape);
        }
      };
      document.addEventListener('keydown', handleEscape);
    });
  }

  // Mobile search toggle functionality
  const searchToggleMobile = document.getElementById('search-toggle-mobile');
  const searchInputMobile = document.getElementById('search-input-mobile');

  if (searchToggleMobile && searchInputMobile) {
    searchToggleMobile.addEventListener('click', function() {
      searchInputMobile.focus();
    });
  }
});
</script>
