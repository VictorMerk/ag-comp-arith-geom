<header style="background: #C22032 !important;">
  <!-- Skip navigation link for accessibility -->
  <a class="skip-link" href="#main-content">Skip to main content</a>

  <!-- Enhanced Navigation Bar with High Contrast Theme -->
  <nav id="navbar" class="navbar heidelberg-navbar navbar-expand-lg sticky-top" role="navigation" aria-label="Main navigation">
    <div class="container-fluid px-3">
      <!-- Brand/Logo - More compact -->
      <a class="navbar-brand fw-bold d-flex align-items-center" href="{{ site.baseurl }}/" aria-label="AG Computational Arithmetic Geometry - Home">
        <div class="brand-icon me-2">
          <div class="bg-white rounded-circle d-flex align-items-center justify-content-center" style="width: 36px; height: 36px;">
            <i class="fas fa-infinity" style="color: var(--heidelberg-red); font-size: 0.9rem;" aria-hidden="true"></i>
          </div>
        </div>
        <div class="brand-text">
          <div class="fw-bold brand-title">AG Computational Arithmetic Geometry</div>
          <small class="d-none d-lg-block university-name">University of Heidelberg</small>
        </div>
      </a>

      <!-- Enhanced Search Bar - Center position for larger screens -->
      <div class="d-none d-lg-flex search-container-center">
        <div class="search-container">
          <div class="search-input-wrapper">
            <i class="ti ti-search search-input-icon" aria-hidden="true"></i>
            <input type="text" id="search-input" class="search-input" 
                   placeholder="Search articles, publications, research..." 
                   aria-label="Search this site" autocomplete="off" 
                   data-placeholder-en="Search articles, publications, research..." 
                   data-placeholder-de="Artikel, Publikationen, Forschung suchen..." 
                   data-placeholder-fr="Rechercher articles, publications, recherche..." 
                   data-placeholder-es="Buscar artículos, publicaciones, investigación..." 
                   data-placeholder-it="Cerca articoli, pubblicazioni, ricerca...">
          </div>
          <div id="search-results" class="search-results-container"></div>
        </div>
      </div>

      <!-- Right side controls -->
      <div class="d-flex align-items-center gap-2">
        <!-- Enhanced Language Switcher -->
        <div class="dropdown">
          <button class="header-control-btn dropdown-toggle" 
                  type="button" 
                  id="language-switcher" 
                  data-bs-toggle="dropdown" 
                  aria-expanded="false"
                  title="Switch Language">
            <span class="flag-icon flag-icon-us"></span>
            <span class="language-code">EN</span>
          </button>
          <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="language-switcher">
            <li>
              <button class="dropdown-item language-option" data-lang="en" type="button">
                <span class="flag-icon flag-icon-us me-2"></span>
                English
              </button>
            </li>
            <li>
              <button class="dropdown-item language-option" data-lang="de" type="button">
                <span class="flag-icon flag-icon-de me-2"></span>
                Deutsch
              </button>
            </li>
          </ul>
        </div>

        <!-- Enhanced Theme Switcher -->
        {% if site.enable_theme_switcher %}
          <button id="theme-toggle" class="header-control-btn" 
                  title="Switch Theme" aria-label="Toggle dark and light mode">
            <i class="fas fa-moon theme-icon" id="theme-icon" aria-hidden="true"></i>
          </button>
        {% endif %}

        <!-- Enhanced Pages CMS Admin Button -->
        <button id="pagescms-admin-toggle" class="header-control-btn" 
                title="Pages CMS Admin (Ctrl+Shift+P)" aria-label="Open Pages CMS Admin"
                onclick="openPagesCMSAdmin()">
          <i class="fas fa-cog" aria-hidden="true"></i>
        </button>

        <!-- Navbar Toggle for Mobile -->
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation menu"
        >
          <span class="navbar-toggler-icon" aria-hidden="true"></span>
        </button>
      </div>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto flex-nowrap align-items-center" role="menubar">
          <!-- Home/About -->
          <li class="nav-item {% if page.permalink == '/' %}active{% endif %}" role="none">
            <a class="nav-link" href="{{ '/' | relative_url }}" role="menuitem" aria-current="{% if page.permalink == '/' %}page{% endif %}">
              <i class="fas fa-home me-1" aria-hidden="true"></i>
              About
            </a>
          </li>

          <!-- Navigation Pages - Simplified -->
          <li class="nav-item {% if page.url == '/members/' %}active{% endif %}" role="none">
            <a class="nav-link" href="{{ '/members/' | relative_url }}" role="menuitem" aria-current="{% if page.url == '/members/' %}page{% endif %}">
              <i class="fas fa-users me-1" aria-hidden="true"></i>
              Members
            </a>
          </li>
          
          <li class="nav-item {% if page.url == '/research/' %}active{% endif %}" role="none">
            <a class="nav-link" href="{{ '/research/' | relative_url }}" role="menuitem" aria-current="{% if page.url == '/research/' %}page{% endif %}">
              <i class="fas fa-microscope me-1" aria-hidden="true"></i>
              Research
            </a>
          </li>
          
          <li class="nav-item {% if page.url == '/publications/' %}active{% endif %}" role="none">
            <a class="nav-link" href="{{ '/publications/' | relative_url }}" role="menuitem" aria-current="{% if page.url == '/publications/' %}page{% endif %}">
              <i class="fas fa-file-alt me-1" aria-hidden="true"></i>
              Publications
            </a>
          </li>
          
          <li class="nav-item {% if page.url == '/teaching/' %}active{% endif %}" role="none">
            <a class="nav-link" href="{{ '/teaching/' | relative_url }}" role="menuitem" aria-current="{% if page.url == '/teaching/' %}page{% endif %}">
              <i class="fas fa-chalkboard-teacher me-1" aria-hidden="true"></i>
              Teaching
            </a>
          </li>
          
          <li class="nav-item {% if page.url == '/links/' %}active{% endif %}" role="none">
            <a class="nav-link" href="{{ '/links/' | relative_url }}" role="menuitem" aria-current="{% if page.url == '/links/' %}page{% endif %}">
              <i class="fas fa-link me-1" aria-hidden="true"></i>
              Links
            </a>
          </li>
          
          <li class="nav-item {% if page.url == '/contact/' %}active{% endif %}" role="none">
            <a class="nav-link" href="{{ '/contact/' | relative_url }}" role="menuitem" aria-current="{% if page.url == '/contact/' %}page{% endif %}">
              <i class="fas fa-envelope me-1" aria-hidden="true"></i>
              Contact
            </a>
          </li>

          <!-- Enhanced Search Bar - Mobile version -->
          <li class="nav-item d-lg-none" role="none">
            <div class="search-container">
              <div class="search-input-wrapper">
                <i class="ti ti-search search-input-icon" aria-hidden="true"></i>
                <input type="text" id="search-input-mobile" class="search-input" 
                       placeholder="Search articles, publications, research..." 
                       aria-label="Search this site" autocomplete="off">
              </div>
              <div id="search-results-mobile" class="search-results-container"></div>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>

