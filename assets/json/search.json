---
layout: null
---
{
  "pages": [
    {% for page in site.pages %}
      {% unless page.excluded_in_search %}
        {
          "title": "{{ page.title | escape }}",
          "content": "{{ page.content | strip_html | strip_newlines | escape }}",
          "subtitle": "{{ page.subtitle | escape }}",
          "description": "{{ page.description | escape }}",
          "url": "{{ page.url | relative_url }}",
          "tags": "{{ page.tags | join: ', ' }}",
          "category": "page",
          "keywords": "{{ page.keywords | escape }}"
        }{% unless forloop.last %},{% endunless %}
      {% endunless %}
    {% endfor %}
    {% if site.posts.size > 0 %},{% endif %}
    {% for post in site.posts %}
      {
        "title": "{{ post.title | escape }}",
        "content": "{{ post.content | strip_html | strip_newlines | escape }}",
        "url": "{{ post.url | relative_url }}",
        "date": "{{ post.date | date: '%B %d, %Y' }}",
        "tags": "{{ post.tags | join: ', ' }}",
        "category": "post",
        "excerpt": "{{ post.excerpt | strip_html | strip_newlines | escape }}"
      }{% unless forloop.last %},{% endunless %}
    {% endfor %}
    {% if site.news.size > 0 %},{% endif %}
    {% for news in site.news %}
      {
        "title": "{{ news.title | escape }}",
        "content": "{{ news.content | strip_html | strip_newlines | escape }}",
        "url": "{{ news.url | relative_url }}",
        "date": "{{ news.date | date: '%B %d, %Y' }}",
        "category": "news",
        "excerpt": "{{ news.excerpt | strip_html | strip_newlines | escape }}"
      }{% unless forloop.last %},{% endunless %}
    {% endfor %}
    ,
